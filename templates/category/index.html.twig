{% extends 'base.html.twig' %}

{% block title %}Hello Category{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center">Liste et ajout de catégories</h1>

    <div>
        <a class="btn btn-primary my-5" href="{{ path('category_add') }}" role="button">Ajouter une catégorie</a>
    </div>
    <ul>
        {% for category in categories %}
        <li>{{ category.id }} – {{ category.name }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
